{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2015"
    ]
  },
  "compileOnSave": false
}
